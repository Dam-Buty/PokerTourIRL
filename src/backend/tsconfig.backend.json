{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "typeRoots" : ["./node_modules/@types", "./types"],
    "target": "ES2018",
    "module": "ESNext",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}